@{
Layout = null;
}
<!doctype html>
<html lang="zh-cn">
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
		<meta charset="UTF-8">
		<title>Draw Together</title>
		<!--[if lt IE 9]>
			<script>
				window.location = "/Home/Bsie"
			</script>
		<![endif]-->
		<script type="text/javascript" src="~/Scripts/jQuery/jquery-2.1.1.min.js"></script>
		<script type="text/javascript" src="~/Scripts/jQuery/bootstrap.min.js"></script>
		<script type="text/javascript" src="~/Scripts/jQuery/jquery.alert.js"></script>
		<script type="text/javascript" src="~/Scripts/jQuery/jquery.websocket.js"></script>
		<script type="text/javascript" src="~/Scripts/jQuery/colpick.js" ></script>
		<script type="text/javascript" src="~/Scripts/DTcore.js"></script>
		
		<link rel="stylesheet" href="~/content/css/bootstrap/bootstrap.min.css">
		<link rel="stylesheet" href="~/content/css/bootstrap/bootstrap-theme.min.css">
		<link rel="stylesheet" href="~/Content/css/font-awesome.min.css">
		<link rel="stylesheet" href="~/content/css/global.css">
		<link rel="stylesheet" href="~/content/css/DTcore.css">
		<link rel="stylesheet" href="~/content/css/tools/colpick.css">
		<link rel="stylesheet" href="~/content/css/tools/animate.min.css">
	</head>
	<body>
		<div class="slide-menu">
			<div class="slide-menu-logo">
				<img src="~/Content/image/DTlogo.png" width="50" alt="logo">
			</div>

			<div class="slide-menu-list">
				<div class="form-group">
					<div class="btn-group-vertical">
						<button type="button" class="btn btn-default" id="clearShape">清除</button>
						<button type="button" class="btn btn-danger" id="saveCanvas">保存</button>
					</div>
				</div>
			</div>
			<div class="list-group slide-menu-footer">
				<a href="/Account/Signout" class="list-group-item text-center" title="注销"><span class="fa fa-sign-out fa-lg"></span></a>
			</div>
		</div>
		<div class="canvas-container">
			<canvas id="canvas"></canvas>
		</div>
		<div class="toolbar">
			<ul class="toolbar-group">
				<li>
					<div class="btn-group">
						<button class="btn btn-default active" id="statusDraw"><span class="fa fa-pencil fa-fw"></span></button>
						<button class="btn btn-default" id="statusErase"><span class="fa fa-eraser fa-fw"></span></button>
					</div>
				</li>
				<li>
					<a href="javascript:;" id="colorPicker"><span></span></a>
				</li>
				<li>
					<div class="btn-group toolbar-thickness-group">
						<button class="btn btn-default btn-thickness active" data-thickness="2"><span></span></button>
						<button class="btn btn-default btn-thickness" data-thickness="5"><span></span></button>
						<button class="btn btn-default btn-thickness" data-thickness="10"><span></span></button>
					</div>
				</li>
			</ul>
		</div>
		
		<div class="slide-user-list">
			<div class="list-group">
				<a class="list-group-item active"><span class="fa fa-list"></span> 用户列表</a>
				<a id="userInfo" data-userid="@ViewBag.UserId" href="javascript:;" class="list-group-item list-group-item-info">@ViewBag.UserName</a>
			</div>
			<div class="copyright">Copyright © 2014-2015</div>
			<div class="copyright">Fisher Chang</div>
		</div>
	</body>
</html>